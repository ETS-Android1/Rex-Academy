<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#12C06A"
    tools:context=".VerifyMail">

    <TextView
        android:id="@+id/sent"
        android:layout_width="408dp"
        android:layout_height="42dp"
        android:layout_marginBottom="56dp"
        android:fontFamily="@font/overpass"
        android:text="We Have Sent You Email Confirmation Link"
        android:textAlignment="center"
        android:textColor="#FDFBFB"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/verifyMail_Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="414dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/overpass"
        android:text="E M A I L    C O N F I R M A T I O N"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

    <TextView
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/overpass"
        android:text="Verify  Your  Mail "
        android:textAlignment="center"
        android:textColor="#EFF0F3"
        android:textSize="22sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/gifImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/just"
        app:layout_constraintVertical_bias="0.357" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="409dp"
        android:layout_height="237dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/just" />

    <TextView
        android:id="@+id/just"
        android:layout_width="414dp"
        android:layout_height="54dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/overpass_thin"
        android:text="JUST ONE MORE STEP"
        android:textAlignment="center"
        android:textColor="#F6F2F2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/please"
        android:layout_width="400dp"
        android:layout_height="32dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/overpass"
        android:text="Please Verify Your Email"
        android:textAlignment="center"
        android:textColor="#FDFBFB"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/sent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/verifyMail_Button"
        android:layout_width="164dp"
        android:layout_height="50dp"
        android:layout_marginBottom="64dp"
        android:background="#314BE6"
        android:text="v e r i f y"
        android:textColor="#FFFDFD"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>