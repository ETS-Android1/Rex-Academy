<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="168dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="#FBFBFD">

        <ImageView
            android:id="@+id/comic_poster_design"
            android:layout_width="120dp"
            android:layout_height="148dp"
            android:src="@drawable/richdad_poster"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comicHeader_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Name"
                android:fontFamily="@font/overpass"
                android:layout_marginTop="1dp"
                android:layout_marginStart="15dp"
                android:textSize="20sp"
                android:textColor="#201F1F"/>


            <TextView
                android:id="@+id/comicWriter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/overpass_thin"
                android:text="Writer Name"
                android:textColor="#2858D3"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif"
                android:text="D e s c r i p t i o n"
                android:textColor="#252424"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/comicDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/overpass_thin"
                android:textSize="11sp"
                android:textColor="#1B1A1A"/>





        </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>