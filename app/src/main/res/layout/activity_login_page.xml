<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#161B37"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/overpass_thin"
                    android:padding="2dp"
                    android:text="Welcome,"
                    android:textColor="#536DFE"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:fontFamily="@font/overpass_thin"
                    android:text="Back  to  Rex  Academy."
                    android:textColor="#CDCBCB"
                    android:textSize="19sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass"
                android:text="S i g n - i n"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address : "
                android:textColor="#fff"
                android:textSize="18sp"
                android:fontFamily="@font/overpass_thin"/>

            <EditText
                android:id="@+id/loginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overpass_thin"
                android:textColor="#fff"
                android:inputType="textEmailAddress"
                android:backgroundTint="#fff"
                android:textSize="18sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password : "
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/overpass_thin"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/loginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:fontFamily="@font/overpass_thin" />
            </com.google.android.material.textfield.TextInputLayout>







            <TextView
                android:id="@+id/forgetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forget Password?"
                android:textColor="#fff"
                android:textSize="15sp"
                android:clickable="true"
                android:textAlignment="textEnd"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/overpass_thin"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#536DFE"
                android:clickable="true"
                android:fontFamily="@font/reem_kufi"
                android:text="L o g i n"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Or Sign in Using : "
                android:textColor="#fff"
                android:fontFamily="@font/overpass_thin"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/googleSignButton"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#ED112B"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/reem_kufi"
                android:text="G o o g l e"
                android:textColor="#fff"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Doesn't have an Account ?"
                android:textColor="#fff"
                android:textSize="15sp"
                android:fontFamily="@font/overpass_thin"/>

            <TextView
                android:id="@+id/gotoRegister"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@color/transparent"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/overpass_thin"
                android:text="R e g i s t e r"
                android:textAllCaps="false"
                android:textColor="#536DFE"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>